@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Campus Virtual- Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/CCA/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/CCA/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Bienvenido!</h1>
                                    </div>

                                    <form id="FrmLogin" class="user">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="txtUsuario" name="Usuario" aria-describedby="UsuiarioHelp" placeholder="Ingresa tu Usuario...">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" id="txtClave" name="Password" placeholder="Ingresa tu Contraseña">
                                        </div>

                                        <div id="msgErrorLogin" class="card bg-warning text-white shadow" style="display:none">
                                            <div class="card-body">
                                                <div class="text-white small">
                                                    Usuario o contraseña incorrectos
                                                </div>
                                            </div>
                                        </div>
                                        <br />
                                        <div class="btn btn-primary btn-user btn-block" onclick="ValidarUsuario()">Ingresar</div>
                                    </form>

                                    <div class="text-center">
                                        <a class="small" href="#">Crear Cuenta</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->    
    <script src="~/CCA/vendor/jquery/jquery.min.js"></script>
    <script src="~/CCA/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/CCA/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/CCA/js/sb-admin-2.min.js"></script>
    <script src="~/Scripts/Login.js"></script>

</body>

</html>
