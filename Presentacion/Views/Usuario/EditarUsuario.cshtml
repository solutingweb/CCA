@model Negocio.N_Usuario
<html>
<head>
    <meta charset="utf-8">
    <h2>Editar</h2>
</head>
<body>
    @using (Html.BeginForm("ModificarUsuario", "Usuario", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label Class="control-label col-md-2">ID</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IdUsuario, new { htmlAttributes = new { @type = "number", @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.IdUsuario, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label Class="control-label col-md-2">Nombre</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @type = "text", @id = "TxtNombre", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label Class="control-label col-md-2">Apellido</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @type = "text", @id = "NumEdad", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label Class="control-label col-md-2">Telefono</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @type = "number", @id = "TextSexo", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label Class="control-label col-md-2">Usuario</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @type = "text", @id = "NumPeso", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                    <div class="col-md-10" id="ErroresP"></div><br />
                </div>
            </div>
            <div class="form-group">
                <label Class="control-label col-md-2">Passwords</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Passwords, new { htmlAttributes = new { @id = "NumAltura", @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.Passwords, "", new { @class = "text-danger" })
                    <div class="col-md-10" id="ErroresA"></div><br />
                </div>
            </div>
            <div class="form-group">
                <label Class="control-label col-md-2">Perfil</label>
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(Model => Model.TipoPerfil, new { @name = "txtTipoPerfil", @class = "form-control" })<br />
                    @Html.ValidationMessageFor(model => model.id_Rol, "", new { @class = "text-danger" })
                    <div class="col-md-10" id="ErroresD"></div><br />
                </div>
            </div>
            <div class="form-group">
                <label Class="control-label col-md-2">Estado</label>
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(Model => Model.Estado, new { @name = "txtEstado", @class = "form-control" })<br />
                    @Html.ValidationMessageFor(model => model.Id_estado, "", new { @class = "text-danger" })
                    <div class="col-md-10" id="ErroresD"></div><br />
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" value="Modificar Usuario" />
                </div>
            </div>
        </div>
    }
    <br />
    <div class="col-md-10">
        <td>
            <a class="btn btn-primary" href="/Usuario/Admin/">Volver a la lista</a>
        </td>
    </div>
</body>
</html>